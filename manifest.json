{
  "manifest_version": 3,
  "name": "Auto Scroll",
  "version": "1.0",
  "description": "Automatically Scroll a webpage",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/scroll.js"]
    }
  ]
}
